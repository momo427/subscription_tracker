<!-- Loop over each object in the projects array -->
{{#each events as |events| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/event/{{events.id}}">{{events.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ğŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount events.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{events.user.name}} on {{format_date events.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{events.description}}
    </p>
  </div>
</div>
{{/each}}
